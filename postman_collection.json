{
  "info": {
    "name": "Tempo Monorepo Base Endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Health checks plus auth and board endpoints for `api-main` (register/login + boards CRUD). Uses a JWT variable for protected routes."
  },
  "variable": [
    {
      "key": "api_main_host",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "svc_brain_host",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "svc_engine_host",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "api-main Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{api_main_host}}/health",
          "host": ["{{api_main_host}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "svc-brain Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{svc_brain_host}}/health",
          "host": ["{{svc_brain_host}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "svc-engine Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{svc_engine_host}}/health",
          "host": ["{{svc_engine_host}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{api_main_host}}/register",
          "host": ["{{api_main_host}}"],
          "path": ["register"]
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{api_main_host}}/login",
          "host": ["{{api_main_host}}"],
          "path": ["login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// If login returns { token: \"...\" } save it to collection variable 'jwt_token'",
              "if (pm.response.code === 200) {",
              "  const json = pm.response.json();",
              "  if (json.token) { pm.collectionVariables.set('jwt_token', json.token); }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Boards - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"My First Board\"\n}\n",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{api_main_host}}/boards",
          "host": ["{{api_main_host}}"],
          "path": ["boards"]
        }
      }
    },
    {
      "name": "Boards - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": {
          "raw": "{{api_main_host}}/boards",
          "host": ["{{api_main_host}}"],
          "path": ["boards"]
        }
      }
    },
    {
      "name": "Boards - Get by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": {
          "raw": "{{api_main_host}}/boards/:id",
          "host": ["{{api_main_host}}"],
          "path": ["boards", ":id"],
          "variable": [ { "key": "id", "value": "" } ]
        }
      }
    },
    {
      "name": "Boards - Save (update)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"boardData\": { }\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{api_main_host}}/boards/:id/save",
          "host": ["{{api_main_host}}"],
          "path": ["boards", ":id", "save"],
          "variable": [ { "key": "id", "value": "" } ]
        }
      }
    },
    {
      "name": "Boards - Delete",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": {
          "raw": "{{api_main_host}}/boards/:id",
          "host": ["{{api_main_host}}"],
          "path": ["boards", ":id"],
          "variable": [ { "key": "id", "value": "" } ]
        }
      }
    }
  ]
}
